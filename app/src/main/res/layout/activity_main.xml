<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="297dp"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="25dp"
        android:text="Notificaciones"
        android:textSize="9sp"
        app:backgroundTint="#07AA81"
        app:layout_constraintStart_toStartOf="@+id/contenedorPrincipal"
        app:layout_constraintTop_toTopOf="@+id/contenedorPrincipal" />

    <FrameLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.nex3z.notificationbadge.NotificationBadge
            android:id="@+id/badge"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="203dp"
            android:layout_marginLeft="203dp"
            android:layout_marginTop="4dp"
            android:elevation="18dp"
            android:textSize="11sp"
            app:nbMaxTextLength="2" />

        <com.nex3z.notificationbadge.NotificationBadge
            android:id="@+id/badge2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="340dp"
            android:layout_marginLeft="303dp"
            android:layout_marginTop="4dp"
            android:elevation="18dp"
            android:textSize="11sp"
            app:nbMaxTextLength="2" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navBotton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            app:backgroundTint="#07AA81"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/menu_navigation" />

    </FrameLayout>

